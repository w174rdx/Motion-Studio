{{> partials/header}}
<div class="course-details">
    <h1>{{course.name}}</h1>
    <p><strong>Duration:</strong> {{course.duration}}</p>
    <h2>Classes</h2>
    <ul>
        {{#course.classes}}
            <li>
                <p><strong>Date:</strong> {{date}}</p>
                <p><strong>Time:</strong> {{time}}</p>
                <p><strong>Description:</strong> {{description}}</p>
                <p><strong>Location:</strong> {{location}}</p>
                <p><strong>Price:</strong> {{price}}</p>
            </li>
        {{/course.classes}}
    </ul>
    <h2>Book This Course</h2>
    {{#error}}
        <p style="color: red;">{{error}}</p>
    {{/error}}
    {{#hasBooked}}
        <p class="booked-message">You have already booked this course.</p>
    {{/hasBooked}}
    <form action="/courses/{{course._id}}/book" method="POST" class="book-form">
        <label>Name: <input type="text" name="name" value="{{#user}}{{user.name}}{{/user}}" required></label><br>
        <label>Email: <input type="email" name="email" value="{{#user}}{{user.email}}{{/user}}" required></label><br>
        <button type="submit" {{#hasBooked}}disabled{{/hasBooked}} class="book-now">Book Now</button>
    </form>
</div>
{{> partials/footer}}